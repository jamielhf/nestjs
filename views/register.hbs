<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
    <meta name="csrf-token" content="{{csrf}}12">
  </head>
  <body>
    {{ message }}
    用户名<input type="text" value="jamie52" id="username"><br/>
    邮箱<input type="text"  value="5693097@qq.com" id="email"><br/>
    密码<input type="password" value="123456"  id="password"><br/>
    token<input type="text" value=""  id="token"><br/>
    <br/>
    <button id="login">测试登录</button>  
     <br/>
    <button id="reg">注册</button>  
     <br/>
     <button id="activeRegister">验证注册token</button>  
       <button id="info">获取用户信息</button>  
     <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
     <script>
       var token = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    $('#reg').click(function(){
        $.ajax({
              url:'/api/auth/register',
              type:'post',
              dataType:'json',
              headers: {
            'CSRF-Token': token // <-- is the csrf token as a header
            },
              data:{
                username: $('#username').val(),
                password:$('#password').val(),
                repwd:$('#password').val(),
                email:$('#email').val(),
              },
            }).done((res) => {
              console.log(res);
            }).fail((res) => {
              console.log(res);
            })
    })
     $('#login').click(function(){
        $.ajax({
              url:'/api/auth/login',
              type:'post',
              dataType:'json',
              headers: {
            'CSRF-Token': token // <-- is the csrf token as a header
            },
              data:{
                username: $('#username').val(),
                password:$('#password').val(),
              },
            }).done((res) => {
              console.log(res);
              if(res.code==200 && res.data) {
                sessionStorage.setItem('token',res.data.token)
              }
            }).fail((res) => {
              console.log(res);
            })
    })
      $('#activeRegister').click(function(){
        $.ajax({
              url:'/api/auth/activeRegister',
              type:'post',
              dataType:'json',
              headers: {
            'CSRF-Token': token // <-- is the csrf token as a header
            },
              data:{
                username: $('#username').val(),
                key: $('#token').val(),
              },
            }).done((res) => {
              console.log(res);
            }).fail((res) => {
              console.log(res);
            })
    })
     $('#info').click(function(){
        $.ajax({
              url:'/api/user/info',
              type:'get',
              dataType:'json',
              headers: {
              'CSRF-Token': token, // <-- is the csrf token as a header
               Authorization: `Bearer ${sessionStorage.getItem('token')}`
              },
            }).done((res) => {
              console.log(res);
            }).fail((res) => {
              console.log(res);
            })
    })
   
     </script>
  </body>
</html>